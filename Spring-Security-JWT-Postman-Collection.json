{
  "info": {
    "name": "Spring Security JWT Demo",
    "description": "Collection for testing JWT Authentication and Authorization",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login - Get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('jwt_token', jsonData.token);",
                  "    console.log('âœ… Token saved: ' + jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\",\n  \"role\": \"USER\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Secured Endpoints",
      "item": [
        {
          "name": "GET /hello (WITHOUT Token) - Should Fail 403",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/hello",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["hello"]
            }
          },
          "response": []
        },
        {
          "name": "GET /hello (WITH Valid Token) - Should Succeed 200",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/hello",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["hello"]
            }
          },
          "response": []
        },
        {
          "name": "GET /hello (WITH Invalid Token) - Should Fail 403",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid.token.here",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:8080/hello",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["hello"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}

